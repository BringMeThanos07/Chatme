<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="246dp"
        android:layout_height="80dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="449dp"
        android:backgroundTint="#FFFFFF"
        android:text="AC"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/logarithm"
        android:layout_width="95dp"
        android:layout_height="87dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="447dp"
        android:backgroundTint="#FFFFFF"
        android:text="log"
        android:textColor="#FFEB3B"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/percentage"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="449dp"
        android:backgroundTint="#FFFFFF"
        android:text="%"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logarithm"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#FFFFFF"
        android:text="/"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="87dp"
        android:backgroundTint="#FFFFFF"
        android:text="*"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/addition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/percentage"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subtraction"
        android:layout_width="99dp"
        android:layout_height="84dp"
        android:layout_marginStart="303dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="273dp"
        android:backgroundTint="#FFFFFF"
        android:text="-"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiply"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/addition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="187dp"
        android:backgroundTint="#FFFFFF"
        android:text="+"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/subtraction"
        app:layout_constraintTop_toBottomOf="@+id/multiply" />

    <Button
        android:id="@+id/equality"
        android:layout_width="101dp"
        android:layout_height="172dp"
        android:layout_marginStart="307dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="#FFEB3B"
        android:text="="
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addition"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/seven"
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="352dp"
        android:backgroundTint="#FFFFFF"
        android:text="7"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/eight"
        android:layout_width="94dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="352dp"
        android:backgroundTint="#FFFFFF"
        android:text="8"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/logarithm" />

    <Button
        android:id="@+id/nine"
        android:layout_width="91dp"
        android:layout_height="93dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="348dp"
        android:backgroundTint="#FFFFFF"
        android:text="9"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintTop_toBottomOf="@+id/percentage" />

    <Button
        android:id="@+id/four"
        android:layout_width="95dp"
        android:layout_height="84dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="199dp"
        android:layout_marginBottom="264dp"
        android:backgroundTint="#FFFFFF"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subtraction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <Button
        android:id="@+id/five"
        android:layout_width="97dp"
        android:layout_height="81dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="264dp"
        android:backgroundTint="#FFFFFF"
        android:text="5"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subtraction"
        app:layout_constraintStart_toEndOf="@+id/four" />

    <Button
        android:id="@+id/six"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="267dp"
        android:backgroundTint="#FFFFFF"
        android:text="6"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/nine" />

    <Button
        android:id="@+id/one"
        android:layout_width="94dp"
        android:layout_height="83dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="179dp"
        android:backgroundTint="#FFFFFF"
        android:text="1"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <Button
        android:id="@+id/two"
        android:layout_width="97dp"
        android:layout_height="85dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="185dp"
        android:backgroundTint="#FFFFFF"
        android:text="2"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addition"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <Button
        android:id="@+id/three"
        android:layout_width="91dp"
        android:layout_height="83dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#FFFFFF"
        android:text="3"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addition"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toBottomOf="@+id/six" />

    <Button
        android:id="@+id/squareroot"
        android:layout_width="103dp"
        android:layout_height="159dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="sqrt"
        android:textColor="#FFEB3B"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equality"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zero"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="102dp"
        android:backgroundTint="#FFFFFF"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/power"
        app:layout_constraintStart_toEndOf="@+id/squareroot" />

    <Button
        android:id="@+id/power"
        android:layout_width="92dp"
        android:layout_height="156dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#FFFFFF"
        android:text="^"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equality"
        app:layout_constraintStart_toEndOf="@+id/zero" />

    <Button
        android:id="@+id/point"
        android:layout_width="87dp"
        android:layout_height="78dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="17dp"
        android:background="#FFFFFF"
        android:text="."
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/power"
        app:layout_constraintStart_toEndOf="@+id/squareroot" />

    <Button
        android:id="@+id/euler"
        android:layout_width="85dp"
        android:layout_height="82dp"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        android:text="e"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/factorial"
        android:layout_width="86dp"
        android:layout_height="81dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:text="n!"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/divide"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sinf"
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="14dp"
        android:background="#FFFFFF"
        android:text="sin"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cosf"
        android:layout_width="152dp"
        android:layout_height="83dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="131dp"
        android:background="#FFFFFF"
        android:text="cos"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tanf"
        android:layout_width="123dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="#FFFFFF"
        android:text="tan"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>